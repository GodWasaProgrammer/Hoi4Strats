@using Hoi4Strats.Client.Pages
@inherits LayoutComponentBase

<RadzenLayout Style="grid-template-columns: auto 1fr auto; grid-template-areas: 'rz-header rz-header rz-header' 'rz-sidebar rz-body rz-right-sidebar'">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" Style="position: relative;">
            <RadzenImage Style="width: 100%; height: 100px; object-fit: cover;" Path="border.jpg"></RadzenImage>

            <!-- Placera UserDisplay över bilden -->
            <div style="position: absolute; bottom: 0; left: 0; padding: 5px;">
                <UserDisplay />
            </div>
        </RadzenStack>
    </RadzenHeader>
    <NavMenu/>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenComponents @rendermode="InteractiveAuto"/>
</RadzenLayout>
